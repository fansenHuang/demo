<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.system.mapper.DeptMapper">
	
	<resultMap type="Dept" id="DRM" autoMapping="true">
		<id column="ID" property="ID"/>
	</resultMap>
	<select id="deptTree" resultMap="DRM">
		select * from dept
	</select>
	
	<insert id="andDept" parameterType="Dept" useGeneratedKeys="true" keyProperty="id">
		insert into dept(name,pId) values(
			#{name},
			#{pId}
		)
	</insert>
	
	<select id="deptList" resultMap="DRM">
		select * from dept 
		<where>
			<if test="start!=null and start!=''">
				create_time <![CDATA[>= ]]> #{start} 
			</if>
			<if test="end!=null and end!=''">
				and create_time <![CDATA[<= ]]> #{end} 
			</if>
			<if test="deptName!=null and deptName!=''">
				and name like concat(concat('%',#{deptName}),'%') 
			</if>
		</where>
	</select>
	
</mapper>